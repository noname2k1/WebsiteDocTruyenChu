@model List<WebsiteDocTruyenChu.Models.ListModel>
<footer id="footer" class="footer border-top pt-2">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-5">
                <strong>Suu Truyện</strong> -
                <a title="Đọc truyện online" class="text-dark text-decoration-none" href="#">Đọc truyện</a> online một cách nhanh nhất. Hỗ trợ mọi thiết bị như di động và máy tính bảng.
            </div>
            <ul class="col-12 col-md-7 list-unstyled d-flex flex-wrap list-tag">
                @foreach (WebsiteDocTruyenChu.Models.ListModel listItem in Model)
                {
                    <li class="me-1">
                        <span class="badge text-bg-light">
                            <a class="text-dark text-decoration-none"
                               href="/danh-sach/@listItem.Slug" title="@listItem.Name">
                                @listItem.Name
                            </a>
                        </span>
                    </li>
                }
            </ul>

            <div class="col-12">
                <a rel="license" href="http://creativecommons.org/licenses/by/4.0/" target="_blank">
                    <img alt="Creative Commons License" style="border-width:0;margin-bottom: 10px"
                         src="@Url.Content("~/Content/assets/images/88x31.png")">
                </a><br>
                <p>
                    Website hoạt động dưới Giấy phép truy cập mở
                    <a rel="license" class="text-decoration-none text-dark hover-title" href="http://creativecommons.org/licenses/by/4.0/">
                        Creative Commons Attribution 4.0
                        International License
                    </a>
                </p>
            </div>
        </div>
    </div>
</footer>
