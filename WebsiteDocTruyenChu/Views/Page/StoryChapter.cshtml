@model WebsiteDocTruyenChu.DTOs.StoryChapterViewDTO

<div class="chapter-wrapper container my-5">
 
    <a href="@Url.Action("Story","Page", new { storySlug = Model.storySlug })" class="text-decoration-none">
        <h1 class="text-center text-success">@Model.storyName</h1>
    </a>
  
    <p class="text-center text-dark">@Model.title</p>
    <hr class="chapter-start container-fluid">
    <div class="chapter-nav text-center">
        <div class="chapter-actions chapter-actions-origin d-flex align-items-center justify-content-center">
            <a class="btn btn-success me-1 chapter-prev @(Model.preChapterSlug == "" ? "disabled" : "")" 
               href="@Url.Action("StoryChapter","Page", new { storySlug = Model.storySlug, chapterSlug = Model.preChapterSlug })" title="">
                <span>
                    Chương
                </span>trước
            </a>
            <button class="btn btn-success chapter_jump me-1" data-slug-story="@Model.storySlug">
                <span>
                    <svg style="fill: #fff;" xmlns="http://www.w3.org/2000/svg" height="1em"
                         viewBox="0 0 448 512">
                        <path d="M0 96C0 78.3 14.3 64 32 64H416c17.7 0 32 14.3 32 32s-14.3 32-32 32H32C14.3 128 0 113.7 0 96zM0 256c0-17.7 14.3-32 32-32H416c17.7 0 32 14.3 32 32s-14.3 32-32 32H32c-17.7 0-32-14.3-32-32zM448 416c0 17.7-14.3 32-32 32H32c-17.7 0-32-14.3-32-32s14.3-32 32-32H416c17.7 0 32 14.3 32 32z">
                        </path>
                    </svg>
                </span>
            </button>

            <div class="dropdown select-chapter me-1 d-none">
                <a class="btn btn-secondary dropdown-toggle" role="button" id="dropdownMenuLink"
                   data-bs-toggle="dropdown" aria-expanded="false">
                    Chọn chương
                </a>

                <ul class="dropdown-menu select-chapter__list" aria-labelledby="dropdownMenuLink">
                    @if (Model.storyChapters.Count > 0)
                    {
                        foreach (var storyChapter in Model.storyChapters)
                        {
                            <li class="select-chapter__item py-2">
                                <a class="text-decoration-none text-dark p-2 py-2" 
                                   href="@Url.Action("StoryChapter","Page", new { storySlug = Model.storySlug, chapterSlug = storyChapter.slug })" 
                                   title="@storyChapter.title">@(Model.title.Contains(':') ? storyChapter.title.Split(':')[0] : storyChapter.title)</a>
                            </li>
                        }
                    }
                </ul>
            </div>
            <a class="btn btn-success chapter-next @(Model.nextChapterSlug == "" ? "disabled" : "")"
               href="@Url.Action("StoryChapter","Page", new { storySlug = Model.storySlug, chapterSlug = Model.nextChapterSlug })"
               title="">
                <span>
                    Chương
                </span>tiếp
            </a>
        </div>
    </div>
    <hr class="chapter-end container-fluid">


    <div class="chapter-content mb-3">
        @Html.Raw(Model.content)
    </div>

    <div class="text-center px-2 py-2 alert alert-success d-none d-lg-block" role="alert">Ghi chú: chúc mọi người đọc truyện vui vẻ</div>
</div>

<div class="chapter-nav text-center d-none d-lg-block">
    <div class="chapter-actions chapter-actions-origin d-flex align-items-center justify-content-center">
        <a class="btn btn-success me-1 chapter-prev @(Model.preChapterSlug == "" ? "disabled" : "")" 
           href="@Url.Action("StoryChapter","Page", new { storySlug = Model.storySlug, chapterSlug = Model.preChapterSlug })"
           title="">
            <span>
                Chương
            </span>trước
        </a>
        <button class="btn btn-success chapter_jump me-1" data-story-id="3" data-slug-chapter="chuong-1"
                data-slug-story="nang-khong-muon-lam-hoang-hau">
            <span>
                <svg style="fill: #fff;" xmlns="http://www.w3.org/2000/svg" height="1em"
                     viewBox="0 0 448 512">
                    <path d="M0 96C0 78.3 14.3 64 32 64H416c17.7 0 32 14.3 32 32s-14.3 32-32 32H32C14.3 128 0 113.7 0 96zM0 256c0-17.7 14.3-32 32-32H416c17.7 0 32 14.3 32 32s-14.3 32-32 32H32c-17.7 0-32-14.3-32-32zM448 416c0 17.7-14.3 32-32 32H32c-17.7 0-32-14.3-32-32s14.3-32 32-32H416c17.7 0 32 14.3 32 32z">
                    </path>
                </svg>

            </span>
        </button>

        <div class="dropdown select-chapter me-1 d-none">
            <a class="btn btn-secondary dropdown-toggle" role="button" id="dropdownMenuLink"
               data-bs-toggle="dropdown" aria-expanded="false">
                Chọn chương
            </a>

            <ul class="dropdown-menu select-chapter__list" aria-labelledby="dropdownMenuLink">
                @if (Model.storyChapters.Count > 0)
                {
                    foreach (var storyChapter in Model.storyChapters)
                    {
                        <li class="select-chapter__item py-2">
                            <a class="text-decoration-none text-dark p-2 py-2" 
                               href="@Url.Action("StoryChapter","Page", new { storySlug = Model.storySlug, chapterSlug = storyChapter.slug })" 
                               title="@storyChapter.title">@(Model.title.Contains(':') ? storyChapter.title.Split(':')[0] : storyChapter.title)</a>
                        </li>
                    }
                }
            </ul>
        </div>
        <a class="btn btn-success chapter-next @(Model.nextChapterSlug == "" ? "disabled" : "")"
          href="@Url.Action("StoryChapter","Page", new { storySlug = Model.storySlug, chapterSlug = Model.nextChapterSlug })"
           title="">
            <span>
                Chương
            </span>tiếp
        </a>
    </div>
</div>

<div class="chapter-actions chapter-actions-mobile d-flex align-items-center justify-content-center">
    <a class="btn btn-success me-2 chapter-prev @(Model.preChapterSlug == "" ? "disabled" : "")" 
       href="@Url.Action("StoryChapter","Page", new { storySlug = Model.storySlug, chapterSlug = Model.preChapterSlug })"
       title="">
        <span>
            Chương
        </span>trước
    </a>
    <button class="btn btn-success chapter_jump me-2"
            data-slug-story="@Model.storySlug">
        <span>

            <svg style="fill: #fff;" xmlns="http://www.w3.org/2000/svg" height="1em"
                 viewBox="0 0 448 512">
                <path d="M0 96C0 78.3 14.3 64 32 64H416c17.7 0 32 14.3 32 32s-14.3 32-32 32H32C14.3 128 0 113.7 0 96zM0 256c0-17.7 14.3-32 32-32H416c17.7 0 32 14.3 32 32s-14.3 32-32 32H32c-17.7 0-32-14.3-32-32zM448 416c0 17.7-14.3 32-32 32H32c-17.7 0-32-14.3-32-32s14.3-32 32-32H416c17.7 0 32 14.3 32 32z">
                </path>
            </svg>
        </span>
    </button>

    <div class="dropup select-chapter me-2 d-none">
        <a class="btn btn-secondary dropdown-toggle" role="button" id="dropdownMenuLink"
           data-bs-toggle="dropdown" aria-expanded="false">
            Chọn chương
        </a>

        <ul class="dropdown-menu select-chapter__list" aria-labelledby="dropdownMenuLink">
            @if (Model.storyChapters.Count > 0)
            {
                foreach (var storyChapter in Model.storyChapters)
                {
                    <li class="select-chapter__item py-2">
                        <a class="text-decoration-none text-dark p-2 py-2" 
                           href="@Url.Action("StoryChapter","Page", new { storySlug = Model.storySlug, chapterSlug = storyChapter.slug })" 
                           title="@storyChapter.title">@(Model.title.Contains(':') ? storyChapter.title.Split(':')[0] : storyChapter.title)</a>
                    </li>
                }
            }
        </ul>
    </div>
    <a class="btn btn-success chapter-next @(Model.nextChapterSlug == "" ? "disabled" : "")" 
       href="@Url.Action("StoryChapter","Page", new { storySlug = Model.storySlug, chapterSlug = Model.nextChapterSlug })"
       title=""><span>Chương </span>tiếp</a>
</div>

@section Scripts {
    <script src="@Url.Content("~/Content/assets/chapter.js")"></script>
}

